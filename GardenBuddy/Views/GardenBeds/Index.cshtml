@model IEnumerable<GardenBuddy.Models.GardenBed>

@{
    ViewData["Title"] = "Index";
}

@*<h1>My Garden(s)</h1>*@

<p>
    <a asp-action="Create">Create New Garden</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                My Garden(s)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.GardenBedId">@Html.DisplayFor(modelItem => item.name)</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GardenBedId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.GardenBedId">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

