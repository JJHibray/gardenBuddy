@model GardenBuddy.Models.GardenBedViewModels.AddPlantViewModel

@{
    ViewData["Title"] = "AddPlant";
}

<h4>Add a plant to your garden</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddPlant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label class="control-label">Select Garden</label>
                <select asp-for="GardenBedId" class="form-control" asp-items="@Model.GardenList"></select>
            </div>
            <div>
                <label class="control-label">Select Plant</label>
                <select asp-for="PlantId" class="form-control" asp-items="@Model.PlantList"></select>
            </div>
            <div class="form-group">
                <label class="control-label">How Many Plants in this Row?</label>
                <input asp-for="PlantGarden.plantCount" class="form-control" placeholder="How many plants are you planting..."/>
                <span asp-validation-for="PlantGarden.plantCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>The same Row Number cannot be used twice</p>
                <label class="control-label">Which Row Number?</label>
                <input asp-for="PlantGarden.rowNumber" class="form-control" placeholder="What row will these plants be in..."/>
                <span asp-validation-for="PlantGarden.rowNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
