@model GardenBuddy.Models.PlantGarden

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this Plant from your Garden?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.rowNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.rowNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.plantCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.plantCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Plant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Plant.PlantName)
        </dd class>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.GardenBed)*@Garden Bed Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GardenBed.name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PlantGardenId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="javascript:history.go(-1)">Back</a>
    </form>
</div>
