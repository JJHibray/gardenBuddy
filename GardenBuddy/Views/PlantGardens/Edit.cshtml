@model GardenBuddy.Models.GardenBedViewModels.EditGardenPlantViewModel

@{
    ViewData["Title"] = "Edit";
}



<h4>Edit Plant in your Garden</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlantGarden.PlantGardenId" />
            <div class="form-group">
                <label asp-for="Plant.PlantName" class="control-label"></label>
                <select asp-for="PlantId" class="form-control" asp-items="ViewBag.PlantId"></select>
                <span asp-validation-for="PlantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlantGarden.rowNumber" class="control-label"></label>
                <input asp-for="PlantGarden.rowNumber" class="form-control" />
                <span asp-validation-for="PlantGarden.rowNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlantGarden.plantCount" class="control-label"></label>
                <input asp-for="PlantGarden.plantCount" class="form-control" />
                <span asp-validation-for="PlantGarden.plantCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
